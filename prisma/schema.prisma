generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Dish {
  id            Int          @id @default(autoincrement())
  name          String
  url           String
  customImageId Int?
  customImage   CustomImage? @relation(fields: [customImageId], references: [id])
  image         Int          @default(0)
  lastMade      DateTime?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  user          String
  ingredients   Ingredient[]

  @@index([customImageId])
}

model Ingredient {
  id     Int    @id @default(autoincrement())
  value  String
  dish   Dish   @relation(fields: [dishId], references: [id])
  dishId Int

  @@index([dishId])
}

model CustomImage {
  id           Int    @id @default(autoincrement())
  name         String
  size         Int
  type         String
  lastModified Float
  data         Bytes

  Dish Dish[]
}
